<Window x:Class="StarHue.CursorFollower"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarHue"
        mc:Ignorable="d"
        Background="#01000000"
        WindowStyle = "None"
        Width = "200"
        Height = "200"
        ResizeMode = "NoResize"
        AllowsTransparency = "true"
        ShowInTaskbar = "false"
        Topmost = "true"
        Title="Picking a color...">
    <Grid>
        <Border Name="MiniColorDisplay" HorizontalAlignment="Left" Width="16" Height="16" Margin="110,110,0,0" Background="White" VerticalAlignment="Top" BorderBrush="#FF7F7F7F" BorderThickness="1" CornerRadius="3,3,3,3"/>
    </Grid>
</Window>
